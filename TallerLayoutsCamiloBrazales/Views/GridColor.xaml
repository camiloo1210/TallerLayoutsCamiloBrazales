<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerLayoutsCamiloBrazales.Views.GridColor"
             Title="GridColor">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <BoxView Color="Black" Grid.Row="0" Grid.Column="0"/>

        <BoxView Color="CornflowerBlue" Grid.Row="0" Grid.Column="1"/>

        <BoxView Color="Yellow" Grid.Row="1" Grid.Column="0"/>
        <VerticalStackLayout>
            <BoxView Color="Pink"  Grid.Row="1" Grid.Column="1"/>
            <Button Text="Siguiente Pagina" Clicked="Boton1"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
