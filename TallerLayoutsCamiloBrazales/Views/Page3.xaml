            </StackLayout>

            
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="FillAndExpand">
                <Image Source="onepiece2.png" WidthRequest="500" HeightRequest="500" VerticalOptions="Center"/>
                <Button Text="Volver" VerticalOptions="Center" Clicked="Boton3"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" 
             HorizontalOptions="FillAndExpand">
                <Image Source="coby.jpg" WidthRequest="500" HeightRequest="500" VerticalOptions="Center"/>
                <Button Text="Volver" VerticalOptions="Center" Clicked="Boton3"/>
            </StackLayout>
            
        </FlexLayout>
    </ScrollView>
</ContentPage>
