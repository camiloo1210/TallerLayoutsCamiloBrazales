        <FlexLayout Direction="Column" 
                    AlignItems="Center" 
                    JustifyContent="Center">

           
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="FillAndExpand">
                <Image Source="luffy.jpeg" WidthRequest="500" HeightRequest="500" VerticalOptions="Center"/>
